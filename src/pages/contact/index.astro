---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us - MAISON">
  <section class="page-header">
    <div class="container">
      <h1>Get in Touch</h1>
      <p>We're here to help you find the perfect piece or answer any questions</p>
    </div>
  </section>

  <section class="contact-section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info">
          <h2>Visit Our Atelier</h2>
          <p class="intro">Experience our collection in person and consult with our jewelry specialists.</p>
          
          <div class="info-blocks">
            <div class="info-block">
              <div class="info-icon">
                <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20 5 L20 35 M5 20 L35 20" stroke="#C6A87D" stroke-width="2"/>
                  <circle cx="20" cy="20" r="8" fill="none" stroke="#C6A87D" stroke-width="2"/>
                </svg>
              </div>
              <h3>Address</h3>
              <p>123 Fifth Avenue<br>New York, NY 10011<br>United States</p>
            </div>
            
            <div class="info-block">
              <div class="info-icon">
                <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M10 12 L20 22 L30 12" stroke="#C6A87D" stroke-width="2" fill="none" stroke-linecap="round"/>
                  <rect x="8" y="12" width="24" height="18" rx="2" stroke="#C6A87D" stroke-width="2" fill="none"/>
                </svg>
              </div>
              <h3>Email</h3>
              <p>hello@maison.example<br>boutique@maison.example</p>
            </div>
            
            <div class="info-block">
              <div class="info-icon">
                <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 14 L16 18 C16 18 18 16 20 16 C22 16 24 18 24 18 L28 14" stroke="#C6A87D" stroke-width="2" fill="none" stroke-linecap="round"/>
                  <rect x="10" y="10" width="20" height="20" rx="2" stroke="#C6A87D" stroke-width="2" fill="none"/>
                </svg>
              </div>
              <h3>Phone</h3>
              <p>+1 (555) 123-4567<br>Mon-Sat: 10am - 6pm EST</p>
            </div>
            
            <div class="info-block">
              <div class="info-icon">
                <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="20" cy="20" r="10" stroke="#C6A87D" stroke-width="2" fill="none"/>
                  <path d="M20 14 L20 20 L25 25" stroke="#C6A87D" stroke-width="2" stroke-linecap="round"/>
                </svg>
              </div>
              <h3>Hours</h3>
              <p>Monday - Friday: 10am - 6pm<br>Saturday: 11am - 5pm<br>Sunday: By appointment</p>
            </div>
          </div>
        </div>
        
        <div class="contact-form-container">
          <h2>Send Us a Message</h2>
          <form class="contact-form" id="contactForm">
            <div class="form-group">
              <label for="name">Full Name</label>
              <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" id="email" name="email" required>
            </div>
            
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" name="phone">
            </div>
            
            <div class="form-group">
              <label for="interest">Interested In</label>
              <select id="interest" name="interest">
                <option value="">Select an option</option>
                <option value="engagement">Engagement Rings</option>
                <option value="wedding">Wedding Bands</option>
                <option value="necklace">Necklaces</option>
                <option value="earrings">Earrings</option>
                <option value="bracelet">Bracelets</option>
                <option value="custom">Custom Design</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="message">Message</label>
              <textarea id="message" name="message" rows="5" required></textarea>
            </div>
            
            <button type="submit" class="btn-submit">Send Message</button>
            
            <p class="form-note">We'll respond within 24 hours during business days.</p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <section class="appointment-section">
    <div class="container">
      <div class="appointment-cta">
        <h2>Schedule a Private Consultation</h2>
        <p>Book an exclusive appointment with one of our jewelry specialists to explore our collection and discuss custom designs.</p>
        <button class="btn-primary">Book Appointment</button>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-header {
    background-color: white;
    padding: var(--spacing-xl) 0;
    text-align: center;
    border-bottom: 1px solid rgba(10, 10, 10, 0.1);
  }
  
  .container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }
  
  .page-header h1 {
    margin-bottom: var(--spacing-sm);
  }
  
  .page-header p {
    font-size: 1.1rem;
    color: var(--warm-gray);
  }
  
  .contact-section {
    padding: var(--spacing-xl) 0;
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
  }
  
  .contact-info h2 {
    margin-bottom: var(--spacing-md);
  }
  
  .intro {
    font-size: 1.1rem;
    color: var(--warm-gray);
    margin-bottom: var(--spacing-xl);
  }
  
  .info-blocks {
    display: grid;
    gap: var(--spacing-lg);
  }
  
  .info-block {
    display: flex;
    gap: var(--spacing-md);
  }
  
  .info-icon {
    flex-shrink: 0;
  }
  
  .info-block h3 {
    font-size: 1.1rem;
    margin-bottom: var(--spacing-xs);
  }
  
  .info-block p {
    color: var(--warm-gray);
    line-height: 1.6;
  }
  
  .contact-form-container {
    background-color: white;
    padding: var(--spacing-xl);
    border-radius: 4px;
  }
  
  .contact-form-container h2 {
    margin-bottom: var(--spacing-lg);
  }
  
  .form-group {
    margin-bottom: var(--spacing-md);
  }
  
  .form-group label {
    display: block;
    margin-bottom: var(--spacing-xs);
    font-weight: 500;
    font-size: 0.95rem;
  }
  
  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: var(--spacing-sm);
    border: 1px solid rgba(10, 10, 10, 0.2);
    border-radius: 2px;
    font-family: var(--font-body);
    font-size: 1rem;
    transition: var(--transition);
  }
  
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--gold);
  }
  
  .form-group textarea {
    resize: vertical;
  }
  
  .btn-submit {
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-lg);
    background-color: var(--black);
    color: var(--cream);
    font-size: 1rem;
    letter-spacing: 0.05em;
    border-radius: 2px;
    margin-bottom: var(--spacing-sm);
  }
  
  .btn-submit:hover {
    background-color: var(--gold);
    color: var(--black);
  }
  
  .form-note {
    font-size: 0.9rem;
    color: var(--warm-gray);
    text-align: center;
  }
  
  .appointment-section {
    background-color: var(--black);
    color: var(--cream);
    padding: var(--spacing-xl) 0;
  }
  
  .appointment-cta {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }
  
  .appointment-cta h2 {
    color: var(--cream);
    margin-bottom: var(--spacing-md);
  }
  
  .appointment-cta p {
    font-size: 1.1rem;
    color: var(--warm-gray);
    margin-bottom: var(--spacing-lg);
  }
  
  .btn-primary {
    padding: var(--spacing-sm) var(--spacing-xl);
    background-color: var(--gold);
    color: var(--black);
    font-size: 1rem;
    letter-spacing: 0.05em;
    border-radius: 2px;
  }
  
  .btn-primary:hover {
    opacity: 0.9;
  }
  
  @media (max-width: 768px) {
    .container {
      padding: 0 var(--spacing-md);
    }
    
    .contact-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
    
    .contact-form-container {
      padding: var(--spacing-md);
    }
    
    .info-blocks {
      gap: var(--spacing-md);
    }
  }
</style>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement | null;
  
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    // In a real application, this would send data to a server
    alert('Thank you for your message! We will contact you within 24 hours.');
    form.reset();
  });
</script>
