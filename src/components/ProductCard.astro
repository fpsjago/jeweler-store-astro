---
interface Props {
  slug: string;
  name: string;
  price: string;
  category: string;
  imageSrc: string;
  imageWidth: number;
  imageHeight: number;
}

const { slug, name, price, category, imageSrc, imageWidth, imageHeight } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<a href={`${baseUrl}products/${slug}/`} class="product-card" transition:name={`product-${slug}`}>
  <div class="product-image">
    <img 
      src={imageSrc} 
      alt={name} 
      width={imageWidth} 
      height={imageHeight}
      loading="lazy"
    />
  </div>
  <div class="product-info">
    <p class="category">{category}</p>
    <h3>{name}</h3>
    <p class="price">{price}</p>
  </div>
</a>

<style>
  .product-card {
    display: block;
    background-color: white;
    border-radius: 2px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 48px rgba(10, 10, 10, 0.12);
  }
  
  .product-image {
    aspect-ratio: 4/3;
    background-color: var(--cream);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .product-card:hover .product-image img {
    transform: scale(1.08);
  }
  
  .product-info {
    padding: var(--spacing-md);
    text-align: center;
  }
  
  .category {
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--warm-gray);
    margin-bottom: var(--spacing-xs);
  }
  
  .product-info h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-xs);
    transition: color 0.3s ease;
  }
  
  .product-card:hover .product-info h3 {
    color: var(--gold);
  }
  
  .price {
    font-family: var(--font-display);
    font-size: 1.1rem;
    color: var(--gold);
  }
  
  @media (max-width: 768px) {
    .product-info {
      padding: var(--spacing-sm);
    }
    
    .product-info h3 {
      font-size: 1.1rem;
    }
  }
</style>
