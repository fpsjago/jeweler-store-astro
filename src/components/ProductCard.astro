---
interface Props {
  slug: string;
  name: string;
  price: string;
  category: string;
  svgContent: string;
}

const { slug, name, price, category, svgContent } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<a href={`${baseUrl}products/${slug}/`} class="product-card">
  <div class="product-image" set:html={svgContent} />
  <div class="product-info">
    <p class="category">{category}</p>
    <h3>{name}</h3>
    <p class="price">{price}</p>
  </div>
</a>

<style>
  .product-card {
    display: block;
    background-color: white;
    border-radius: 2px;
    overflow: hidden;
    transition: var(--transition);
  }
  
  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(10, 10, 10, 0.1);
  }
  
  .product-image {
    aspect-ratio: 1;
    background-color: var(--cream);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-lg);
  }
  
  .product-image :global(svg) {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }
  
  .product-info {
    padding: var(--spacing-md);
    text-align: center;
  }
  
  .category {
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--warm-gray);
    margin-bottom: var(--spacing-xs);
  }
  
  .product-info h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-xs);
  }
  
  .price {
    font-family: var(--font-display);
    font-size: 1.1rem;
    color: var(--gold);
  }
  
  @media (max-width: 768px) {
    .product-image {
      padding: var(--spacing-md);
    }
    
    .product-info {
      padding: var(--spacing-sm);
    }
  }
</style>
