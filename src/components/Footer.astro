---
const baseUrl = import.meta.env.BASE_URL;
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-section">
        <h3>MAISON</h3>
        <p>Exquisite handcrafted jewelry for discerning collectors since 2024.</p>
      </div>
      
      <div class="footer-section">
        <h4>Navigate</h4>
        <nav>
          <a href={baseUrl}>Home</a>
          <a href={`${baseUrl}collections/`}>Collections</a>
          <a href={`${baseUrl}about/`}>About</a>
          <a href={`${baseUrl}contact/`}>Contact</a>
        </nav>
      </div>
      
      <div class="footer-section">
        <h4>Contact</h4>
        <p>hello@maison.example</p>
        <p>+1 (555) 123-4567</p>
      </div>
      
      <div class="footer-section">
        <h4>Follow</h4>
        <div class="social-links">
          <a href="#" aria-label="Instagram">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="2" y="2" width="20" height="20" rx="5" stroke="currentColor" stroke-width="2"/>
              <circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="2"/>
              <circle cx="18" cy="6" r="1" fill="currentColor"/>
            </svg>
          </a>
          <a href="#" aria-label="Pinterest">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
              <path d="M9 16C9 16 10 13 10 11C10 9 11 7 13 7C15 7 15 9 15 10C15 12 14 13 13 14C12 15 14 15 15 14C17 12 17 9 17 8C17 5 15 3 12 3C9 3 7 5 7 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} MAISON. All rights reserved.</p>
      <p class="credit">Template by <a href="https://jagofps.dev" target="_blank" rel="noopener">jagoFps</a></p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--black);
    color: var(--cream);
    padding: var(--spacing-xl) 0 var(--spacing-md);
    margin-top: var(--spacing-xl);
  }
  
  .container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }
  
  .footer-section h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-sm);
    letter-spacing: 0.2em;
  }
  
  .footer-section h4 {
    font-size: 1rem;
    margin-bottom: var(--spacing-sm);
    letter-spacing: 0.1em;
    color: var(--gold);
  }
  
  .footer-section p {
    color: var(--warm-gray);
    margin-bottom: var(--spacing-xs);
  }
  
  .footer-section nav {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }
  
  .footer-section nav a {
    color: var(--warm-gray);
  }
  
  .footer-section nav a:hover {
    color: var(--gold);
  }
  
  .social-links {
    display: flex;
    gap: var(--spacing-sm);
  }
  
  .social-links a {
    color: var(--warm-gray);
  }
  
  .social-links a:hover {
    color: var(--gold);
  }
  
  .footer-bottom {
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(198, 168, 125, 0.2);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
    color: var(--warm-gray);
  }
  
  .credit a {
    color: var(--gold);
  }
  
  .credit a:hover {
    opacity: 0.8;
  }
  
  @media (max-width: 768px) {
    .container {
      padding: 0 var(--spacing-md);
    }
    
    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
    
    .footer-bottom {
      flex-direction: column;
      gap: var(--spacing-xs);
      text-align: center;
    }
  }
</style>
